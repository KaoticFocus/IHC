{
  "name": "ihc-desktop",
  "version": "1.0.0",
  "description": "IHC Conversation Recorder Desktop App",
  "main": "dist/main/main.js",
  "scripts": {
    "start": "electron .",
    "dev": "concurrently \"npm run dev:react\" \"npm run dev:electron\"",
    "dev:react": "vite",
    "dev:electron": "npm run build:electron && electron .",
    "build": "npm run build:react && npm run build:electron",
    "build:react": "vite build",
    "build:electron": "tsc -p tsconfig.electron.json",
    "package": "electron-builder build --mac --win",
    "package:mac": "electron-builder build --mac",
    "package:win": "electron-builder build --win"
  },
  "build": {
    "appId": "com.ihc.desktop",
    "productName": "IHC Conversation Recorder",
    "mac": {
      "category": "public.app-category.productivity",
      "target": [
        "dmg",
        "zip"
      ]
    },
    "win": {
      "target": [
        "nsis",
        "portable"
      ]
    },
    "files": [
      "dist/**/*",
      "package.json"
    ]
  },
  "dependencies": {
    "@babel/types": "^7.24.0",
    "@emotion/react": "^11.11.0",
    "@emotion/styled": "^11.11.0",
    "@mui/icons-material": "^5.11.16",
    "@mui/material": "^5.13.0",
    "@types/node": "^20.0.0",
    "electron-store": "^8.1.0",
    "howler": "^2.2.3",
    "mic": "^2.1.2",
    "openai": "^4.20.1",
    "react": "^18.2.0",
    "react-dom": "^18.2.0"
  },
  "devDependencies": {
    "@fontsource/roboto": "^5.0.0",
    "@types/howler": "^2.2.7",
    "@types/react": "^18.2.0",
    "@types/react-dom": "^18.2.0",
    "@vitejs/plugin-react": "^4.0.0",
    "concurrently": "^8.0.1",
    "electron": "^28.0.0",
    "electron-builder": "^24.6.4",
    "electron-devtools-installer": "^4.0.0",
    "typescript": "^5.0.4",
    "vite": "^5.0.0"
  }
}
